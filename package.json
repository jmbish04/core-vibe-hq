{
  "name": "core-vibe-hq",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "orchestrator",
    "apps/specialists/conflict-specialist",
    "apps/specialists/delivery-report-specialist",
    "apps/specialists/frontend-testing-specialist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:biome": "biome check .",
    "lint:biome:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:all:fix": "pnpm run typecheck && pnpm run lint:fix && pnpm run lint:biome:fix && pnpm run format:fix",
    "preview": "pnpm run build && vite preview",
    "deploy": "pnpm run lint:all && pnpm run test:ci && pnpm run build && wrangler deploy",
    "deploy:force": "pnpm run test:ci && pnpm run build && wrangler deploy",
    "deploy:dev": "pnpm run test:ci && pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "migrate:db:remote": "wrangler d1 migrations apply core-task-master-api",
    "migrate:db:local": "wrangler d1 migrations apply core-task-master-api --local",
    "migrate:list": "wrangler d1 migrations list core-task-master-api",
    "test": "cd worker && vitest run",
    "test:watch": "cd worker && vitest",
    "test:unit": "cd worker && vitest run tests/unit",
    "test:smoke": "cd worker && vitest run -c vitest.smoke.config.ts",
    "test:coverage": "cd worker && vitest run --coverage",
    "test:ui": "cd worker && vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "install:all": "bash scripts/install-all.sh",
    "types:all": "bash scripts/types-all.sh",
    "typecheck:all": "bash scripts/typecheck-all.sh",
    "lint:all": "bash scripts/lint-all.sh",
    "problems": "bash scripts/run-problems.sh",
    "factory-orchestrator": "tsx tools/factory-orchestrator/index.ts",
    "analyze-problems": "tsx scripts/analyze-problems.ts",
    "db:migrate:local": "cd orchestrator && npm run db:migrate:local",
    "db:migrate:remote": "cd orchestrator && npm run db:migrate:remote",
    "db:generate": "cd orchestrator && npm run db:generate",
    "update:wrangler": "bash scripts/update-wrangler.sh",
    "create-worker": "tsx scripts/create-worker.ts",
    "smoke:ai-provider": "node scripts/smoke/codex_taskmaster_unit_test_ai_provider_from_taskmaster.cjs",
    "test:taskmaster": "node --experimental-vm-modules ./node_modules/.bin/jest --config jest.config.mjs tests/unit/ai-providers/codex-cli.test.js",
    "mcp:taskmaster": "node scripts/mcp/taskmaster_mcp.mjs",
    "test:ci": "vitest run --coverage --reporter=json",
    "fix:deps": "bash scripts/fix-dependencies.sh",
    "smoke:all": "bash scripts/run-smoke-tests.sh all",
    "smoke:infrastructure": "bash scripts/run-smoke-tests.sh infrastructure",
    "smoke:health": "bash scripts/run-smoke-tests.sh health",
    "smoke:api": "bash scripts/run-smoke-tests.sh api",
    "smoke:workers": "bash scripts/run-smoke-tests.sh workers",
    "smoke:ui": "bash scripts/run-smoke-tests.sh ui",
    "smoke:factories": "bash scripts/run-smoke-tests.sh factories",
    "smoke:ai-providers": "bash scripts/run-smoke-tests.sh ai-providers",
    "smoke:patches": "bash scripts/run-smoke-tests.sh patches",
    "smoke:automation": "bash scripts/run-smoke-tests.sh automation",
    "smoke:errors": "bash scripts/run-smoke-tests.sh errors",
    "smoke:report": "bash scripts/run-smoke-tests.sh report"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "@jest/globals": "^30.2.0"
  }
}
